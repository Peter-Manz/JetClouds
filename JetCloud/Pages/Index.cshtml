@page
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using JetCloud.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div>
    <h2 class="display-4">Welcome</h2>
    @if (SignInManager.IsSignedIn(User))
    {
        <h4>Welcome, @UserManager.GetUserName(User)</h4>

        //<form method="post">
            <table class="table">
            @foreach(var dep in Model.departments)
            {
            <tr>
              <td>@dep.departmentID</td>
              <td>@dep.departmentName</td>
            @* <td><button id="Edit" type="submit" asp-page-handler="Edit" asp-route-departmentID="@dep.departmentID">Edit</button></td>*@
            </tr>
            }
            </table>
        //</form>

        <div>
            @foreach (var file in Model.departmentFiles)
            {
                <p>@file.fileName</p>
                <p>@file.fileType</p>
                <p>@file.fileDate</p>
                <p>@file.fileVersion</p>
                <p>@file.departmentID</p>
                <form method="post" asp-page-handler="Download" asp-route-fileID="@file.fileID">
                    <button type="submit" asp-page-handler="Download" asp-route-fileID="@file.fileID">Download</button>
                    </form>
            }
        </div>
  


        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="uploadedFile.departmentID">Department ID</label>
                <input asp-for="uploadedFile.departmentID" name="departmentID" />
            </div>
            <div>
                <label asp-for="uploadedFile.fileDate"></label>
                <input asp-for="uploadedFile.fileDate" name="fileDate" />

            </div>
            <dl>
                <dt>
                    <label> Upload File</label>
                </dt>
                <dd>
                    <input type="file" id="file1" asp-for="Upload" multiple="multiple"/>
                </dd>
            </dl>
            <input class="UploadFilebtn" type="submit">
        </form>
    }
   
</div>
   