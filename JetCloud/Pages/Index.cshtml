@page
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using JetCloud.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
        <form id="searchBarContainer" asp-page="./Index" method="get">
            <input id="inputText" type="text" name="Search" value="@Model.CurrentFilter" placeholder="Search"/>
            <input id="submitSearch" type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Default</a>
        </form>
 
        <div id="filesGrid">
                @foreach (var file in Model.DepartmentFiles)
                {

            <div id="departmentFiles">
                <div id="fileDropDown">
                    <form method="post" asp-page-handler="Download" asp-route-fileID="@file.fileID">
                        <button type="submit" asp-page-handler="Download" asp-route-fileID="@file.fileID">Download</button>
                    </form>
                    <form method="post" asp-page-handler="Delete" asp-route-fileID="@file.fileID">
                        <button type="submit" asp-page-handler="Delete" asp-route-fileID="@file.fileID">Delete</button>
                    </form>
                </div>
                <div id="fileBanner">
                    <p>@file.fileName</p>
                    <p>Last Edit: @file.fileDate</p>
                    <p>Version: @file.fileVersion</p>
                    <p>Department ID: @file.departmentID</p>
                </div>
            </div>

                }
        <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
            @Html.DisplayNameFor(model => model.DepartmentFiles[0].fileName)
        </a>
        <div>
            <button onclick="showForm_hideForm()">Upload File</button>
        </div>
       
        </div>
    <div id="sideBar">
        <div id="departments">
            <div id="subHeading">
                <h4>Squadrons</h4>
            </div>
            @foreach (var deps in Model.Departments)
            {
            <p>@deps.departmentName : @deps.departmentID</p>
            }
        </div>
    
        <div id ="users">
            <div id="subHeading">
            <h4>Pilots</h4>
            </div>
            @foreach (var user in Model.Users)
            {
            <p>@user.Title @user.GivenName @user.SurName </p>
            }
        </div>
        <div id="subHeading">
            <h4>Storage</h4>
        </div>
    </div>

        <form id="uploadFileForm" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="uploadedFile.departmentID">Department ID</label>
                <input asp-for="uploadedFile.departmentID" name="departmentID" />
            </div>
            <div>
                <label asp-for="uploadedFile.fileDate"></label>
                <input asp-for="uploadedFile.fileDate" name="fileDate" />

            </div>
            <dl>
                <dt>
                    <label> Upload File</label>
                </dt>
                <dd>
                    <input type="file" id="file1" asp-for="Upload" multiple="multiple"/>
                </dd>
            </dl>
            <input class="UploadFilebtn" type="submit">
        </form>
}
   

   