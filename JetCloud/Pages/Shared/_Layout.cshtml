<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity
@using JetCloud.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JetCloud</title>
@*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/JetCloud.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>
<body>
    <div id="header">
        <div id="logo">
           <img src="~/img/JetCloudAppTitle.png" alt="logo">   
        </div>
        <div id="pageLinks">
            @if (SignInManager.IsSignedIn(User))            
            {
                <a asp-page="/Index">Home</a>
                <form asp-page="/Logout" method="post">
                    <button type="submit">Logout</button>
                </form>
            }
            else
            {
                <a asp-page="/Register">Register</a>
                <a asp-page="/Login">Login</a>
            }  
        </div>
        <div id="profileName">
            @if (SignInManager.IsSignedIn(User))
            {
                <p>Hello, @UserManager.GetUserName(User)</p>
                if (User.IsInRole("Admin"))
                {
                    <p>Administrator</p>
                }
                else
                {
                    <p>Member</p>
                }
            }
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>